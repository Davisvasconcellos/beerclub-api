# Ambiente de Produção
NODE_ENV=production
PORT=4000
API_PUBLIC_BASE_URL=https://api.vibesessionsproject.com
CORS_ORIGINS=https://app.vibesessionsproject.com

# Banco de Dados (preencher com valores reais)
DB_HOST=<db_host>
DB_PORT=<db_port>
DB_NAME=<db_name>
DB_USER=<db_user>
DB_PASSWORD=<db_password>

# JWT
JWT_SECRET=<um_segredo_forte_unico_em_producao>
JWT_EXPIRES_IN=24h

# Uploads
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Rate Limiting (ajuste se necessário)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logs
LOG_LEVEL=info

# Firebase Admin Credentials (Application Default)
# Caminho absoluto para o arquivo de credenciais do serviço Firebase
GOOGLE_APPLICATION_CREDENTIALS=/absolute/path/to/your/firebase-service-account.json